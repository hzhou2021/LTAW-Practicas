{
    "name": "electron-chat-server",
    "description": "Servidor de chat local como aplicaci√≥n de escritorio con Electron",
    "version": "1.0.0",
    "main": "main.js",
    "author": {
        "name": "Hao"
    },
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "postinstall": "electron-builder install-app-deps"
    },
    "build": {
        "appId": "com.electron.chatserver",
        "productName": "ChatElectron",
        "directories": {
            "output": "dist"
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "category": "Utility"
        }
    },
    "devDependencies": {
        "electron": "^30.0.1",
        "electron-builder": "^24.13.3"
    },
    "dependencies": {
        "express": "^4.21.2",
        "socket.io": "^4.7.5"
    }
}
